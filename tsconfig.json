{
  "include": ["src", "tests"],
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDirs": [
      "src",
      "tests"
    ],
    "baseUrl": "src",
    "paths": {
      "~/*": ["*"],
      "~/tests/*": ["../tests/*"],
    },
    "resolveJsonModule": true, 
  }
}
